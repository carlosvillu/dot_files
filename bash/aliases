# cd
alias ..="cd ../"
alias ...="cd ../../"

# rm
function rmdir {
    rm -rf $1
}

# mkdir
function mkdir! {
    mkdir $1; cd $1
}

function mkpkg {
    dir= pwd
    for i in $(echo $1 | tr "/" "\n")
    do
      mkdir! $i
    done
    cd $dir
}

function mkpkg! {
    for i in $(echo $1 | tr "/" "\n")
    do
      mkdir! $i
    done
}

# bash
alias reload=". ~/.bashrc"

# apache
alias restart="sudo apachectl restart"

function newhost {
    echo 127.0.0.1 $1 | sudo tee -a /private/etc/hosts
    NEW_HOST="
    <VirtualHost *:80>
        DocumentRoot $2
        ServerName $1
    </VirtualHost>
    "
    echo $NEW_HOST | sudo tee -a /private/etc/apache2/extra/httpd-vhosts.conf
    restart
}

# jstestdriver
alias jstest="java -jar /usr/bin/jstestdriver.jar --tests all --reset"

function jstestserver {
    java -jar /usr/bin/jstestdriver.jar --port $1
}

# django

function setdsm {
    export PYTHONPATH=$PYTHONPATH:$PWD/..
    export PYTHONPATH=$PYTHONPATH:$PWD
    if [ -z "$1" ]; then 
        x=${PWD/\/[^\/]*\/}
        export DJANGO_SETTINGS_MODULE=$x.settings
    else    
        export DJANGO_SETTINGS_MODULE=$1
    fi

    echo "DJANGO_SETTINGS_MODULE set to $DJANGO_SETTINGS_MODULE"
}
